# Makefile
# Variables
PROJECT_NAME=robin
PYTHON_EXEC=poetry run python

# ---------------------------
# ğŸ§ª Tests
# ---------------------------

test:
	$(PYTHON_EXEC) -m pytest

# ---------------------------
# ğŸ” Linting
# ---------------------------

lint:
	poetry run flake8 apis

# ---------------------------
# ğŸ§¹ Nettoyage
# ---------------------------

clean:
	find . -type d -name '__pycache__' -exec rm -r {} +
	rm -rf .mypy_cache .pytest_cache *.pyc *.pyo *.pyd .coverage htmlcov

# ---------------------------
# ğŸ“¦ Packaging / install
# ---------------------------

install:
	poetry install

update:
	poetry update

lock:
	poetry lock
